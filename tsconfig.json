{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "declaration": true,
        "declarationMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "jsx": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "paths": {
      "@/*": ["./*"]
    }
}